<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-extend="PosTicket">
        <t t-jquery=".pos-sale-ticket" t-operation="replace">
            <div class="pos-sale-ticket" style="font-size: 190%; padding: 2em">

                <t t-esc="order.name"/><br />
                <t t-esc="widget.pos.config.name"/><br />
                <br />
                <t t-esc="widget.pos.company.name"/><br />
                <t t-if="receipt.header">
                    <div style='text-align:center'>
                        <t t-esc="receipt.header" />
                    </div>
                    <br />
                </t>
                <t t-if="widget.pos.sale_journal_address">
                    <t t-esc="widget.pos.sale_journal_address.street.slice(0, 32)"/><br />
                    <t t-esc="widget.pos.sale_journal_address.street.slice(32, 64)"/><br />
                    <t t-esc="widget.pos.sale_journal_address.street.slice(64)"/><br />
                </t>
                NIT: <t t-esc="widget.pos.company.vat"/><br />
                Resolucion: <t t-esc="widget.pos.sale_journal.numero_resolucion_gface"/><br />
                Del: <t t-esc="widget.pos.sale_journal.rango_inicial_gface"/> Al: <t t-esc="widget.pos.sale_journal.rango_final_gface"/><br />
                Fecha Resolucion: <t t-esc="widget.pos.sale_journal.fecha_resolucion_gface"/><br />
                Serie: <t t-esc="widget.pos.sale_journal.serie_gface"/><br />
                Factura No.: <t t-esc="order.numero_gface.replace(widget.pos.sale_journal.serie_gface, '')"/><br />
                <br />
                Fecha: <t t-esc="order.formatted_validation_date"/><br />
                Usuario: <t t-esc="widget.pos.get_cashier().name"/><br />
                <br />
                NIT: <t t-esc="order.get_client().vat ? order.get_client().vat : ''"/><br />
                Nombre: <t t-esc="order.get_client().name"/><br />
                <table class='receipt-orderlines'>
                    <colgroup>
                        <col width='40%' />
                        <col width='25%' />
                        <col width='25%' />
                        <col width='10%' />
                    </colgroup>
                    <tr t-foreach="orderlines" t-as="orderline">
                        <td>
                            <t t-esc="orderline.get_product().display_name"/>
                            <t t-if="orderline.get_discount() > 0">
                                <div class="pos-disc-font">
                                    With a <t t-esc="orderline.get_discount()"/>% discount
                                </div>
                            </t>
                        </td>
                        <td class="pos-right-align">
                            <t t-esc="orderline.get_quantity_str_with_unit()"/>
                        </td>
                        <td class="pos-right-align">
                            <t t-esc="widget.format_currency(orderline.get_display_price())"/>
                        </td>
                        <td class="pos-right-align">
                            ---
                        </td>
                    </tr>
                </table>
                <br />
                <table class='receipt-total'>
                    <colgroup>
                        <col width='40%' />
                        <col width='40%' />
                        <col width='10%' />
                    </colgroup>
                    <tr class="emph">
                        <td>Total:</td>
                        <td class="pos-right-align">
                            <t t-esc="widget.format_currency(order.get_total_with_tax())"/>
                        </td>
                        <td class="pos-right-align">
                            ---
                        </td>
                    </tr>
                </table>
                <br />
                <table class='receipt-paymentlines'>
                    <t t-foreach="paymentlines" t-as="line">
                        <colgroup>
                            <col width='40%' />
                            <col width='40%' />
                            <col width='10%' />
                        </colgroup>
                        <tr>
                            <td>
                                <t t-esc="line.name"/>
                            </td>
                            <td class="pos-right-align">
                                <t t-esc="widget.format_currency(line.get_amount())"/>
                            </td>
                            <td class="pos-right-align">
                                ---
                            </td>
                        </tr>
                    </t>
                </table>
                <br />
                <table class='receipt-change'>
                    <colgroup>
                        <col width='40%' />
                        <col width='40%' />
                        <col width='10%' />
                    </colgroup>
                    <tr>
                        <td>Cambio:</td>
                        <td class="pos-right-align">
                            <t t-esc="widget.format_currency(order.get_change())"/>
                        </td>
                        <td class="pos-right-align">
                            --
                        </td>
                    </tr>
                </table>
                Sujeto a pagos trimestrales<br />
                Datos del GFACE<br />
                Guatefacturas, S.A.<br />
                NIT: 5640773-4<br />
                <t t-if="order.firma_gface">
                    CAE: <t t-esc="order.firma_gface.slice(0, 32)"/><br />
                    <t t-esc="order.firma_gface.slice(32)"/>
                </t>

                <t t-if="receipt.footer">
                    <br />
                    <div style='text-align:center'>
                        <t t-esc="receipt.footer" />
                    </div>
                </t>
            </div>
        </t>
    </t>

</templates>
